<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="mainboard_port" />
  <arg name="lidar_port" />

  <node name="serial_node" pkg="rosserial_python" type="serial_node.py" output="screen">
    <param name="port" value="$(arg mainboard_port)" />
    <param name="baud" value="460800" />
  </node>

  <node name="lidar_scan_publisher" pkg="ydlidar_ros_driver" type="ydlidar_ros_driver_node">
    <remap from="scan" to="lidar/scan" />
    <param name="port" value="$(arg lidar_port)" />
    <param name="frame_id" value="lidar_link" />
    <param name="sample_rate" value="5" />
    <param name="angle_min" value="-110" />
    <param name="angle_max" value="110" />
    <param name="range_min" value="0.12" />
    <param name="range_max" value="12.0" />
  </node>

  <node name="odom_converter" pkg="tsuten_real_robot" type="odom_converter" />
</launch>